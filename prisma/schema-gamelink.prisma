model GameLink {
  id            String   @id @default(cuid())
  game          String   @unique  // "roblox", "roblox-2", "gtarp-kush", "gtarp-flow"
  name          String            // Nome amigável
  serverCode    String            // ID do jogo Roblox ou código do servidor FiveM
  serverUrl     String?           // URL completa de acesso
  instagram     String?           // Handle do Instagram
  videoPath     String?           // Caminho do vídeo
  discordInvite String?           // Código do convite Discord
  thumbnailUrl  String?           // URL da imagem de capa (novo campo)
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

